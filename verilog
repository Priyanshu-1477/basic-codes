Dataflow Model[1]
module comp_4bit (
input [3:0]a,b,
output ag,bg,eq
);
assign ag = (a[3] & ~b[3]) |
(~(a[3] ^ b[3]) & (a[2] & ~b[2])) |
(~(a[3] ^ b[3]) & (~(a[2] ^ b[2])) & (a[1] & ~b[1])) |
(~(a[3] ^ b[3]) & (~(a[2] ^ b[2])) & (~(a[1] ^ b[1])
& (a[0] & ~b[0]));
assign bg = (b[3] & ~a[3]) |
(~(b[3] ^ a[3]) & (b[2] & ~a[2])) |
(~(b[3] ^ a[3]) & (~(b[2] ^ a[2])) & (b[1] & ~a[1])) |
(~(b[3] ^ a[3]) & (~(b[2] ^ a[2])) & (~(b[1] ^ a[1]))
& (b[0] & a[0]));
assign eq = (~(b[3] ^ a[3])) & (~(b[2] ^ a[2])) & (~(b[1] ^ a[1]))
& (~(b[0] ^ a[0]));
endmodule